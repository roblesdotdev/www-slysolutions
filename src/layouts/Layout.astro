---
import { ClientRouter } from 'astro:transitions'
import Footer from '~/components/Footer.astro'
import Header from '~/components/Header.astro'
import '@fontsource-variable/dm-sans'
import '~/styles/global.css'
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Sly Soluciones | Servicio Técnico</title>
    <meta
      name="description"
      content="Sly Soluciones ofrece servicio técnico especializado en reparación y mantenimiento de computadoras. Soluciones rápidas, confiables y profesionales."
    />
    <meta
      name="keywords"
      content="servicio técnico, reparacion pc, reparación de computadoras, mantenimiento informático, soluciones tecnológicas, Sly Soluciones"
    />
    <ClientRouter />
  </head>
  <body>
    <div class="grid min-h-screen grid-rows-[auto,1fr,auto]">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @supports selector(::-webkit-scrollbar) {
    @media (hover: hover) {
      ::-webkit-scrollbar {
        width: 8px;
        border-radius: 8px;
      }

      ::-webkit-scrollbar-thumb {
        border-radius: 10px;
        background-color: theme('colors.fg.muted / 30%');
        border: 2px solid transparent;
        background-clip: content-box;
      }

      ::-webkit-scrollbar-thumb:active {
        background-color: theme('colors.fg.muted / 50%');
      }

      ::-webkit-scrollbar-track {
        background: theme('colors.canvas.secondary');
      }

      ::-webkit-scrollbar-corner {
        background: theme('colors.canvas.secondary');
      }
    }
  }

  @supports not selector(::-webkit-scrollbar) {
    * {
      scrollbar-color: theme('colors.accent.DEFAULT / 50%') transparent;
      scrollbar-width: thin;
    }
  }
</style>
